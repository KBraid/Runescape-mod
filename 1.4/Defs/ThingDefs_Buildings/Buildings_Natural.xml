<Defs>

  <ThingDef ParentName="RockBase">
    <defName>MineableCopper</defName>
    <label>copper rocks</label>
    <description>A rocky outcrop.</description>
    <graphicData>
      <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <color>(135,109,76)</color>
      <colorTwo>(222,127,57)</colorTwo>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
    </statBases>
    <building>
      <isResourceRock>true</isResourceRock>
      <mineableThing>CopperOre</mineableThing>
      <mineableYield>10</mineableYield>
      <mineableScatterCommonality>0.8</mineableScatterCommonality>
      <mineableScatterLumpSizeRange>2~20</mineableScatterLumpSizeRange>
    </building>
  </ThingDef>

